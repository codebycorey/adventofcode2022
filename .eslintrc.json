{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ]
    },
    "rules": {
        "@typescript-eslint/semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-useless-return": "off",
        "@typescript-eslint/no-unused-vars": "off"
    }
}
